{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#dddddd",
          "template": "╭─["
        },
        {
          "type": "os",
          "style": "plain",
          "foreground": "#0077c2",
          "template": "{{.Icon}} ",
          "properties": {
            "windows": "",
            "wsl": "",
            "linux": "",
            "mac": ""
          }
        },
        {
          "foreground": "#0077c2",
          "style": "plain",
          "template": "{{ .Name }}",
          "type": "shell"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#dddddd",
          "template": "]-["
        },
        {
          "type": "path",
          "style": "plain",
          "template": "{{ .Path }}",
          "foreground": "#FF9248"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#dddddd",
          "template": "]"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "type": "prompt",
      "segments": [
        {
          "type": "node",
          "style": "plain",
          "foreground": "#3C873A",
          "template": "<#dddddd>(</> {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }}<#dddddd>)</>"
        },
        {
          "type": "angular",
          "style": "plain",
          "foreground": "#ce092f",
          "template": "<#dddddd>(</> {{ .Full }}<#dddddd>)</>"
        },
        {
          "type": "react",
          "style": "plain",
          "powerline_symbol": "",
          "foreground": "#7cb0e4",
          "template": "<#dddddd>( {{ .Full }}<#dddddd>)</>"
        },
        {
          "foreground": "#0d6da8",
          "style": "plain",
          "template": "<#dddddd>(</> {{ if .Unsupported }} {{ else }}{{ .Full }}{{ end }}<#dddddd>)</>",
          "type": "dotnet"
        }
      ]
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "style": "plain",
          "template": "╰─",
          "type": "text",
          "foreground": "#dddddd"
        },
        {
          "foreground": "#FFFB38",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffeb95{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#c5e478{{ end }}",
            "{{ if gt .Ahead 0 }}#C792EA{{ end }}",
            "{{ if gt .Behind 0 }}#C792EA{{ end }}"
          ],
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": "<#dddddd>[</>{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#ef5350> \uf046 {{ .Staging.String }}</>{{ end }}<#dddddd>]</>",
          "type": "git"
        },
        {
          "foreground": "#ef5350",
          "style": "plain",
          "template": "ROOT",
          "type": "root"
        },
        {
          "foreground": "#ecf7fa",
          "foreground_templates": ["{{ if gt .Code 0 }}#ef5350{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "-> ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "tooltips": [
    {
      "type": "az",
      "tips": [
        "azure",
        "terraform",
        "az"
      ],
      "style": "plain",
      "foreground": "#9ec3f0",
      "template": "  <#dddddd>[</> {{.Name}}<#dddddd>]</>"
    },
    {
      "type": "aws",
      "tips": [
        "aws",
        "terraform"
      ],
      "style": "plain",
      "foreground": "#faa029",
      "template": "<#dddddd>[</> {{.Profile}}{{if .Region}}@{{.Region}}{{end}}<#dddddd>]</>"
    }
  ],
  "version": 3
}
